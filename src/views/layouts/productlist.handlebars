<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css"> <!-- Estilos generales -->
    <link rel="stylesheet" href="/css/productList.css"> <!-- Estilos específicos para productList -->
</head>
<body>
{{#if currentUser}}
    <p>Bienvenido, {{currentUser.first_name}} {{currentUser.last_name}}!</p>
{{/if}}
    <h1 class="mt-5">Listado de productos:</h1>
    <div class="container mt-3">
        <div class="row">
            {{#each products}}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="{{this.thumbnail}}" class="card-img-top img-size img-fluid" alt="{{this.title}}">
                        <div class="card-body">
                            <h5 class="card-title">{{this.title}}</h5>
                            {{#if this.description}}
                                <p class="card-text">{{this.description}}</p>
                            {{/if}}
                            {{#if this.price}}
                                <p class="card-text">Precio: {{this.price}}</p>
                            {{/if}}
                        </div>
                        <form action="/api/carts/{{../cartId}}/product/{{#if this._id}}{{this._id}}{{/if}}" method="post">
                            <input type="hidden" name="productId" value="{{this._id}}">
                            <input type="number" name="quantity" value="1"> 
                        <button type="submit">Agregar al carrito</button>
                    </form> 
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
    <!-- Paginación -->
    <div class="pagination">
        {{#if hasPrevPage}}
            <a href="{{prevLink}}">Previous</a>
        {{/if}}
        {{#if hasNextPage}}
            <a href="{{nextLink}}">Next</a>
        {{/if}}
    </div>
</body>
</html>
